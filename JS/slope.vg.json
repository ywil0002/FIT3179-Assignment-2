{
    
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Comparing types of rankings" },
    "data": {
        "url": "https://raw.githubusercontent.com/ywil0002/FIT3179-Assignment-2/master/Data/player_ratings.csv"
     },
     "transform": [
        {"filter": {"field": "Index", "lte": 50}},
        {"filter": {"field": "year", "oneOf": ["2021"]}},
        {
            "bin": true, 
            "field": "name", 
            "as": "binned_name"
        }
    ],
    "width": 300,
    "height": 600,
    "layer":[
        {
            "mark": {
                "type": "line"
            },
            "encoding": {
                "x":{
                    "field": "rating_type", 
                    "type": "nominal",
                    "axis": {
                        "grid": true
                    },
                    "scale": {"padding": 0.15}
                },
            "y":{
                    "field": "rating",
                    "type": "quantitative",
                    "scale": {
                        "domain": [2550,2910]
                    },
                    "axis": {
                        "grid": false
                    }
                },
                "detail": {"field": "name", "type": "nominal"},
                "color": {
                    "field": "binned_name",
                    "type": "nominal",
                    "legend": null
                }
            }
        },
        {
            "mark": {
                "type": "circle"
            },
            "encoding": {
                "x":{
                    "field": "rating_type", 
                    "type": "nominal",
                    "axis": {
                        "grid": true
                    },
                    "scale": {"padding": 0.15}
                },
                "y":{
                    "field": "rating",
                    "type": "quantitative",
                    "scale": {
                        "domain": [2600,2910]
                    },
                    "axis": {
                        "grid": false
                    }
                },
                "detail": {"field": "name", "type": "nominal"},
                "size": {"value": 50},
                "tooltip": [
                    {"field": "name", "type": "nominal", "title":"Player Name"},
                    {"field": "federation", "type": "nominal", "title":"Country"},
                    {"field": "title", "type": "nominal", "title": "Title"},
                    {"field": "rating", "type": "quantitative", "title": "Rating"}
                ],
                "color": {
                    "field": "binned_name",
                    "type": "nominal"
                }
            }
        }
    ],
    "config": {
        "style": {
            "cell": {
                "stroke": "transparent"
            }
        }
    }
}
    