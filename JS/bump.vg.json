{
    
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Comparing rankings from 2015 - 2021" },
    "data": {
        "url": "https://raw.githubusercontent.com/ywil0002/FIT3179-Assignment-2/master/Data/player_ratings.csv"
     },
    "width": 1115,
    "height": 500,
    "transform": [
        {"calculate": "toNumber(datum['Index'])", "as": "rank"},
        {"filter": {"field": "rank", "lte": 50}},
        {"filter": {"field": "rating_type", "oneOf":["rating_standard"]}}
    ],
    "layer":[
        {
            "mark": {
                "type": "line",
                "stroke": "lightgray"
            },
            "encoding": {
                "x":{
                    "field": "year", 
                    "type": "ordinal",
                    "axis": {
                        "grid": true
                    },
                    "scale": {"padding": 0.15}
                },
                "y":{
                        "field": "rank",
                        "type": "ordinal",
                        "axis": {
                            "grid": false
                        },
                        "sort": "ascending"
                },
                "detail": {"field": "surname", "type": "nominal"}
            }
        },
        {
            "mark": {
                "type": "line"
            },
            "transform": [{"filter": {"field": "surname", "oneOf": ["Nakamura","Carlsen", "Caruana", "Duda", "Ding", "Rapport", "Nakamura", "Firouzja", "Radjabov", "Nepomniachtchi"]}}],
            "encoding": {
                "x":{
                    "field": "year", 
                    "type": "ordinal",
                    "axis": {
                        "grid": true
                    },
                    "scale": {"padding": 0.15}
                },
                "y":{
                        "field": "rank",
                        "type": "ordinal",
                        "axis": {
                            "grid": false
                        },
                        "sort": "ascending"
                },
                "size": {"value": 2.5},
                "detail": {"field": "surname", "type": "nominal"},
                "color": {
                    "field": "surname",
                    "scale": {
                        "domain": ["Carlsen", "Caruana", "Duda", "Ding", "Rapport", "Nakamura", "Firouzja", "Radjabov", "Nepomniachtchi"],
                        "range": ["#e60049", "#0bb4ff", "#50e991", "#e6d800", "#9b19f5", "#ffa300", "#dc0ab4", "brown", "#00bfa0"]
                    }
                }
            }
            
        },
        {
            "mark": {
                "type": "tick",
                "width": 12,
                "thickness": 2,
                "orient": "horizontal",
                "cornerRadius": 0,
                "opacity": 0.8,
                "fill": "lightgray"
            },
            "encoding": {
                "x":{
                    "field": "year", 
                    "type": "ordinal",
                    "axis": {
                        "grid": true
                    }
                },
                "y":{
                    "field": "rank",
                    "type": "ordinal",
                    "axis": {
                        "grid": false,
                        "labels": false,
                        "ticks": false
                    },
                    "sort": "descending"
                    },
                    "tooltip": [
                        {"field": "name", "type": "nominal", "title":"Player Name"},
                        {"field": "federation", "type": "nominal", "title":"Country"}
                    ],
                    "color": {
                        "field": "name",
                        "type": "nominal",
                        "legend": null
                    }
               
            }
        },
        {
            "mark": {
                "type": "tick",
                "width": 12,
                "thickness": 4,
                "orient": "horizontal",
                "cornerRadius": 0,
                "opacity": 0.8
            },
            "transform": [{"filter": {"field": "surname", "oneOf": ["Nakamura","Carlsen", "Caruana", "Duda", "Ding", "Rapport", "Nakamura", "Firouzja", "Radjabov", "Nepomniachtchi"]}}],
            "encoding": {
                "x":{
                    "field": "year", 
                    "type": "ordinal",
                    "axis": {
                        "grid": true
                    },
                    "scale": {"padding": 0.15}
                },
                "y":{
                        "field": "rank",
                        "type": "ordinal",
                        "axis": {
                            "grid": false
                        },
                        "sort": "ascending"
                },
                "detail": {"field": "surname", "type": "nominal"},
                "color": {
                    "field": "surname",
                    "scale": {
                        "domain": ["Carlsen", "Caruana", "Duda", "Ding", "Rapport", "Nakamura", "Firouzja", "Radjabov", "Nepomniachtchi"],
                        "range": ["#e60049", "#0bb4ff", "#50e991", "#e6d800", "#9b19f5", "#ffa300", "#dc0ab4", "brown", "#00bfa0"]
                    }
                },
                "tooltip": [
                    {"field": "name", "type": "nominal", "title":"Player Name"},
                    {"field": "federation", "type": "nominal", "title":"Country"},
                    {"field": "title", "type": "nominal", "title": "Title"},
                    {"field": "rating", "type": "quantitative", "title": "Rating"}
                ]
            }
            
        }
    ],
    "config": {
        "tick": {
            "bandSize": 0.1
        },
        "style": {
            "cell": {
                "stroke": "transparent"
            }
        }
    }
}
    