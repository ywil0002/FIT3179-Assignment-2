{
    
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Comparing types of rankings" },
    "data": {
        "url": "https://raw.githubusercontent.com/ywil0002/FIT3179-Assignment-2/master/Data/player_ratings.csv"
     },
    "width": 1115,
    "height": 500,
    "transform": [
        {"calculate": "toNumber(datum['Index'])", "as": "rank"},
        {"filter": {"field": "rank", "lte": 50}},
        {"filter": {"field": "rating_type", "oneOf":["rating_standard"]}}
    ],
    "layer":[
        {
            "mark": {
                "type": "line"
            },
            "encoding": {
                "x":{
                    "field": "year", 
                    "type": "ordinal",
                    "axis": {
                        "grid": true
                    },
                    "scale": {"padding": 0.15}
                },
                "y":{
                        "field": "rank",
                        "type": "ordinal",
                        "axis": {
                            "grid": false
                        },
                        "sort": "ascending"
                },
                "detail": {"field": "fide_id", "type": "nominal"},
                "color": {
                    "field": "name",
                    "type": "nominal",
                    "legend": null,
                    "condition": {
                        "param": "Carlsen, Magnus",
                        "value": "lightgray"
                    }
                }
            }
        },
        {
            "mark": {
                "type": "tick",
                "width": 10,
                "thickness": 2,
                "orient": "horizontal",
                "cornerRadius": 0,
                "opacity": 0.8
            },
            "encoding": {
                "x":{
                    "field": "year", 
                    "type": "ordinal",
                    "axis": {
                        "grid": true
                    }
                },
                "y":{
                    "field": "rank",
                    "type": "ordinal",
                    "axis": {
                        "grid": false,
                        "labels": false,
                        "ticks": false
                    },
                    "sort": "descending"
                    },
                    "tooltip": [
                        {"field": "name", "type": "nominal", "title":"Player Name"},
                        {"field": "federation", "type": "nominal", "title":"Country"}
                    ],
                    "color": {
                        "field": "name",
                        "type": "nominal",
                        "legend": null
                    }
               
            }
        }
    ],
    "config": {
        "tick": {
            "bandSize": 0.1
        },
        "style": {
            "cell": {
                "stroke": "transparent"
            }
        }
    }
}
    